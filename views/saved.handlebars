<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 text-center">
                {{#each episodes}}
                {{#if saved}}
                <div class="card">
                    <div class="card-body align-self-center">
                        <div class="row align-content-center">
                            <div class="col-md-12">
                                <h1 class="card-title">{{title}}
                                    <a href="#" id="save" data-id="{{_id}}" class="card-link favorite">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </h1>

                                 <iframe src="{{this.embed}}" width="100%" height="290" frameborder="0" scrolling="no" title="NPR embedded audio player"></iframe>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}
                {{/each}}
                <div id="notes"></div>
            </div>
        </div>
    </div>
</div>