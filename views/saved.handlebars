<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 text-center">
                {{#each episodes}} {{#if saved}}
                <div class="card">
                    <div class="card-body align-self-center">
                        <div class="row align-content-center">
                            <div class="col-md-12">
                                <h1 class="card-title">{{title}}&nbsp;{{saved}}
                                    <a href="#" id="delete" data-id="{{_id}}" class="card-link favorite">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                    <a href="#" id="addNote" data-id="{{_id}}" class="card-link episodeNotes" data-target="#notesModal" data-toggle="modal">
                                        <i class="far fa-edit"></i>
                                        </i>
                                    </a>
                                </h1>
                                <iframe src="{{this.embed}}" width="100%" height="290" frameborder="0" scrolling="no" title="NPR embedded audio player"></iframe>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}} {{/each}}
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="notesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="episodeTitle"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="notesTitle" class="col-form-label">Title:</label>
            <input type="text" class="form-control" id="notesTitle">
          </div>
          <div class="form-group">
            <label for="notesBody" class="col-form-label">Notes:</label>
            <textarea class="form-control" id="notesBody"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button"  class="btn btn-primary" id="saveNotes">Save</button>
      </div>
    </div>
  </div>
</div> 